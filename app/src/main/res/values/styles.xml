    <!-- SHARED STYLES -->
    <style name="dart_theme" parent="android:Theme">
        <item name="android:windowBackground">@drawable/bg_mainrepeat</item>
        <item name="android:windowTitleBackgroundStyle">@android:color/black</item>
    </style>
    <style name="test_buttons" >
        <item name="android:background">@color/blue_200_light</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TitleBar_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TabBar">
        <item name="android:background">#FFFFFF</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="TabBar_Items">
        <!-- <item name="android:background">@drawable/button_tabs</item> -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF2d2d28</item>
    </style>
    <style name="TabBar_ItemSeparator">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#FFD3D3D3</item>
    </style>

